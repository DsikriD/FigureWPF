<Window x:Class="Figure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Figure"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="cnv" Width="300" Height="300" Background="Gray"/>
        <Button Content="Draw" HorizontalAlignment="Left" Margin="22,17,0,0" VerticalAlignment="Top" Height="30" Width="67" Click="Button_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="22,156,0,0" VerticalAlignment="Top" Height="30" Width="67" Click="Button_Click_1" />
        <ComboBox Name="cmb" HorizontalAlignment="Left" Margin="22,61,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label Name="lbl" Content="Label" HorizontalAlignment="Left" Margin="250,32,0,0" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
